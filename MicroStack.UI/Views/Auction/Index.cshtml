@model IEnumerable<AuctionViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Active Auctions</h1>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">Active Auction List</h3>
            </div>
            <div class="card-body p-0">
                <table id="example1" class="table table-striped table-bordered mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Quantity</td>
                                <td>@item.StartedAt.ToShortDateString()</td>
                                <td>@item.FinishedAt.ToShortDateString()</td>
                                <td class="text-center">
                                    @if (item.Status == 1)
                                    {
                                        <button class="btn btn-danger" disabled title="Auction Closed">Closed</button>
                                    }
                                    else
                                    {
                                        <a asp-controller="Auction" asp-action="Detail" asp-route-Id="@item.Id" class="btn btn-warning" title="View Details">Detail</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
