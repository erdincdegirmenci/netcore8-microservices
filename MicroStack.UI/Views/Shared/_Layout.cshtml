@using MicroStack.Core.Entitties
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>E-Sourcing Project</title>

    <!-- CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700&display=fallback" rel="stylesheet" />
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" rel="stylesheet" />
    <link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />

    <style>
        /* Sidebar avatar and welcome text */
        .user-panel {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            background-color: #1e282c;
            border-radius: 5px;
            margin-bottom: 15px;
        }

            .user-panel img {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                margin-right: 10px;
                border: 2px solid #6c757d;
            }

            .user-panel p {
                color: #c2c7d0;
                font-weight: 600;
                margin: 0;
            }
        /* Sidebar nav-link hover */
        .nav-sidebar .nav-link:hover {
            background-color: #495057;
            color: #ffffff;
        }
        /* Sidebar active link */
        .nav-sidebar .nav-link.active {
            background-color: #007bff;
            color: white;
        }
        /* Content header styling */
        .content-header {
            padding: 1rem 1.5rem;
            background: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="sidebar">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="user-panel mt-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/dist/img/avatar.png" alt="User Image" />
                        </div>
                        <div class="info">
                            <p>Hoşgeldin, @UserManager.GetUserName(User)!</p>
                        </div>
                    </div>

                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-gavel"></i>
                                    <p>
                                        Auction Operations
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Auction" asp-action="Index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Auction List</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Auction" asp-action="Create" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Create Auction</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Logout" class="nav-link">
                                    <i class="nav-icon fas fa-sign-out-alt"></i>
                                    <p>Logout</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
                else
                {
                    <nav class="mt-3">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a asp-action="SignUp" class="nav-link">
                                    <i class="nav-icon fas fa-user-plus"></i>
                                    <p>Sign Up</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Login" class="nav-link">
                                    <i class="nav-icon fas fa-sign-in-alt"></i>
                                    <p>Login</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    @RenderSection("PageHeader", required: false)
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Control Sidebar (optional) -->
        <aside class="control-sidebar control-sidebar-dark"></aside>

    </div>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/fontawesome-free/js/all.min.js"></script>
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>

    <script>
        $(function () {
            // Activate treeview links
            $('.nav-sidebar a').on('click', function () {
                $('.nav-sidebar a').removeClass('active');
                $(this).addClass('active');
            });
        });
    </script>
</body>
</html>
